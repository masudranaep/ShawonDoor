<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8E8E8"
    tools:context=".InsertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/insert_notestitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@drawable/edt_text_color"
        android:layout_marginLeft="16dp"
        android:hint="Title..."/>
    <EditText
        android:id="@+id/insert_notesSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/edt_text_color"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:hint="SubTitle..."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Priority"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/green"
            android:layout_width="25dp"
            android:src="@drawable/check_24"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/green" />

        <ImageView
            android:id="@+id/yollow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
         android:background="@drawable/yellow"/>

        <ImageView
            android:id="@+id/red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/red"/>


    </LinearLayout>
    <EditText
        android:id="@+id/insert_notesData"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="15dp"
        android:gravity="start"
        android:layout_marginTop="16dp"
        android:background="@drawable/edt_text_color"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Notes..."/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/DoneNotebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/check_24" />

</RelativeLayout>